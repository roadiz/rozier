{% extends '@Rozier/layout.html.twig' %}

{% block content %}
<section class="content-global manage-themes">

    <header class="content-header header-themes header-themes-add">
        <h1 class="content-title themes-list-title">{% trans %}add.a.theme{% endtrans %}</h1>
        <a class="content-header-nav-back uk-navbar-content"
           href="{{ path('themesHomePage') }}"
           title="{% trans %}back_to.themes{% endtrans %}"
           data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i></a>
        </a>
    </header>

    <article class="content content-themes-add">
        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form, { attr: {id: 'add-theme-form'}}) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <button data-action-save="#add-theme-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                    <span class="label"><span class="label-text">{% trans %}next{% endtrans %}Â </span></span>
                    <span class="icon-container"><i class="uk-icon-arrow-circle-right icon-right"></i></span>
                </button>
            </fieldset>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
